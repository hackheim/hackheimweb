---
import Icon from "../ui/Icon.astro";
import Button from "../ui/Button.astro";

const id = "kontakt";
const title = "Hackheim";
const sections = [
    {
        title: "",
        content: [
            "Makerspace i Trondheim for alle teknologiinteresserte siden 2012.",
        ],
    },
    {
        title: "Kontakt",
        content: [
            "hackheim@hackheim.no",
            "Trondheim, Norge",
            "Åpne dager: Onsdag og søndag fra 18:00",
        ],
    },
    {
        title: "Fellesskap",
        content: [
            "Bli en del av vårt kreative fellesskap av makere og teknologientusiaster.",
        ],
        button: {
            label: "Happy hacking!",
        },
    },
];
const copyright = "© 2025 Hackheim. Stiftet i 2012 av kreative ildsjeler.";
---

<footer id={id} class="py-12 px-4 bg-primary text-primary-foreground">
    <div class="container mx-auto max-w-6xl">
        <div class="grid md:grid-cols-3 gap-8">
            <div>
                <div class="flex items-center space-x-2 mb-4">
                    <div
                        class="w-8 h-8 bg-accent rounded-lg flex items-center justify-center"
                    >
                        <Icon
                            name="Cpu"
                            class="w-5 h-5 text-accent-foreground"
                        />
                    </div>
                    <h4
                        class="text-2xl font-bold my-0"
                        style="font-family: 'Space Grotesk', sans-serif;"
                    >
                        {title}
                    </h4>
                </div>
                <p class="text-primary-foreground/80">
                    {sections[0]?.content[0]}
                </p>
            </div>

            {
                sections.slice(1).map((section) => (
                    <div>
                        <h5
                            class="font-semibold mb-4"
                            style="font-family: 'Space Grotesk', sans-serif;"
                        >
                            {section.title}
                        </h5>
                        <div class="space-y-2 text-primary-foreground/80">
                            {section.content.map((item, index) =>
                                index === section.content.length - 1 &&
                                section.button ? (
                                    <div>
                                        <p class="mb-4">{item}</p>
                                        <Button variant="accent">
                                            {section.button.label}
                                        </Button>
                                    </div>
                                ) : (
                                    <p>{item}</p>
                                ),
                            )}
                        </div>
                    </div>
                ))
            }
        </div>

        <div
            class="border-t border-primary-foreground/20 mt-8 pt-8 text-center"
        >
            <p class="text-primary-foreground/60">
                {copyright}
            </p>
        </div>
    </div>
</footer>
