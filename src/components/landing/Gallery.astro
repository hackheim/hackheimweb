---
import { Image } from "astro:assets";

export interface Props {
    id?: string;
    title: string;
    description: string;
    images: Array<{
        src: ImageMetadata;
        alt: string;
        title: string;
        description?: string;
    }>;
    backgroundClass?: string;
}

const { id, title, description, images, backgroundClass } = Astro.props;
---

<section id={id} class={`px-4 ${backgroundClass || ""}`}>
    <div class="container mx-auto max-w-6xl">
        <div class="text-center mb-12">
            <h3
                class="text-3xl md:text-4xl font-bold text-primary mb-4"
                style="font-family: 'Space Grotesk', sans-serif;"
            >
                {title}
            </h3>
            <p
                class="text-lg text-muted-foreground max-w-3xl mx-auto text-pretty"
            >
                {description}
            </p>
        </div>

        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {
                images.map((image) => (
                    <div class="bg-card border border-border rounded-lg overflow-hidden shadow-sm hover:shadow-lg transition-shadow">
                        <div class="aspect-[4/3] overflow-hidden">
                            <Image
                                src={image.src}
                                alt={image.alt}
                                class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                loading="lazy"
                                width={400}
                                height={300}
                            />
                        </div>
                        <div class="p-4">
                            <h4
                                class="text-lg font-semibold text-card-foreground mb-2"
                                style="font-family: 'Space Grotesk', sans-serif;"
                            >
                                {image.title}
                            </h4>
                            {image.description && (
                                <p class="text-sm text-muted-foreground mb-0">
                                    {image.description}
                                </p>
                            )}
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
